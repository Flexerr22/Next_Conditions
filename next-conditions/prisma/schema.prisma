generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
    id Int @id @default(autoincrement())

    fullName String
    email String @unique
    password String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id Int @id @default(autoincrement())

    name String
    imageUrl String
    description String
    
    manufacture Manufacture @relation(fields: [manufacture_id], references: [id])
    manufacture_id Int 

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
}


model Manufacture {
    id Int @id @default(autoincrement())

    name String @unique
    description String

    product Product[]
}